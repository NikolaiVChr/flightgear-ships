<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
    <fx>
        <engine>
            <name>generators</name>
            <mode>looped</mode>
            <path>Aircraft/u.s.navy/vessel-sound/vessel1.wav</path>
            <condition>
                <property>/controls/engines/engine/throttle</property>
            </condition>
            <volume>
                <property>velocities/airspeed-kt</property>
                <factor>0.09</factor>
                <min>0.8</min>
                <max>7.8</max>
            </volume>
            <!--<volume>
                <property>/orientation/beta-deg</property>
                <type>log</type>
                <min>0.25</min>
                <max>1</max>
            </volume>-->
            <!--pitch>
    <property>ai/models/aircraft[0]/velocities/true-airspeed-kt</property>

    <factor>0.012</factor>
    <min>0.3</min>
    <max>21.5</max>
    <offset>3.9</offset>
   </pitch-->
        </engine>
        <turbine>
            <name>turbine-set</name>
            <mode>looped</mode>
            <path>Aircraft/u.s.navy/vessel-sound/vessel1.wav</path>
            <condition>
                <property>/controls/engines/engine[0]/throttle</property>
                <less-than>
                    <property>/engines/engine[0]/throttle</property>
                    <value>5</value>
                </less-than>
            </condition>
            <volume>
                <property>velocities/airspeed-kt</property>
                <factor>0.022</factor>
                <min>0.0000000008</min>
                <max>0.58</max>
            </volume>
            <pitch>
                <property>velocities/airspeed-kt</property>
                <factor>0.04</factor>
                <min>0.5</min>
                <max>6.5</max>
                <offset>0.15</offset>
            </pitch>
        </turbine>
        <cruise>
            <name>stamping</name>
            <mode>looped</mode>
            <path>Aircraft/u.s.navy/vessel-sound/vessel.wav</path>
            <condition>
                <property>velocities/airspeed-kt</property>
            </condition>
            <volume>
                <property>velocities/airspeed-kt</property>
                <factor>1</factor>
                <min>0.000000008</min>
                <max>30.08</max>
            </volume>
            <pitch>
                <property>velocities/airspeed-kt</property>
                <factor>0.0000028</factor>
                <min>0.00003</min>
                <max>1.25</max>
                <offset>0.3</offset>
            </pitch>
        </cruise>
        <cruisen>
            <name>stamp2</name>
            <mode>looped</mode>
            <path>Aircraft/u.s.navy/vessel-sound/vessel.wav</path>
            <condition>
                <property>/engines/engine[0]/throttle</property>
            </condition>
            <!--<volume>
                <property>/orientation/alpha-deg</property>
                <type>log</type>
                <min>0.5</min>
                <max>2.0</max>
            </volume>-->
            <volume>
                <property>/engines/engine[0]/throttle</property>
                <factor>0.25</factor>
                <min>2</min>
                <max>5</max>
            </volume>
        </cruisen>
        <horn>
            <name>wooop</name>
            <mode>looped</mode>
            <path>Aircraft/u.s.navy/vessel-sound/horn.wav</path>
            <condition>
                <property>/sim/horn</property>
            </condition>
            <volume>
                <factor>1</factor>
            </volume>
            <!--<volume>
                <property>/orientation/alpha-deg</property>
                <type>log</type>
                <min>0.5</min>
                <max>2.0</max>
            </volume>-->
        </horn>
        <sea>
            <name>seagull</name>
            <mode>looped</mode>
            <type>avionics</type>
            <path>Aircraft/u.s.navy/vessel-sound/newwave.wav</path>
            <condition>
                <less-than>
                    <property>velocities/airspeed-kt</property>
                    <value>12</value>
                </less-than>
            </condition>
            <volume>
                <factor>0.28</factor>
            </volume>
        </sea>
        <rain>
            <name>rain</name>
            <mode>looped</mode>
            <path>Aircraft/u.s.navy/vessel-sound/rain.wav</path>
            <type>avionics</type>
            <condition>
                <greater-than>
                    <property>/environment/rain-norm</property>
                    <value>0</value>
                </greater-than>
            </condition>
            <volume>
                <property>/environment/rain-norm</property>
            </volume>
        </rain>
        <thunder1>
            <name>thunder1</name>
            <mode>once</mode>
            <path>Aircraft/u.s.navy/vessel-sound/thunder1.wav</path>
            <type>avionics</type>
            <property>sound/thunder1</property>
            <pitch>
                <property>sound/dist-thunder1</property>
                <factor>2</factor>
                <offset>0.50</offset>
                <min>1.00</min>
                <max>2.00</max>
            </pitch>
            <volume>
                <property>sound/dist-thunder1</property>
            </volume>
        </thunder1>
        <thunder2>
            <name>thunder2</name>
            <mode>once</mode>
            <path>Aircraft/u.s.navy/vessel-sound/thunder2.wav</path>
            <type>avionics</type>
            <property>sound/thunder2</property>
            <pitch>
                <property>sound/dist-thunder2</property>
                <factor>2</factor>
                <offset>0.50</offset>
                <min>1.00</min>
                <max>2.00</max>
            </pitch>
            <volume>
                <property>sound/dist-thunder2</property>
            </volume>
        </thunder2>
        <thunder3>
            <name>thunder3</name>
            <mode>once</mode>
            <path>Aircraft/u.s.navy/vessel-sound/thunder3.wav</path>
            <type>avionics</type>
            <property>sound/thunder3</property>
            <pitch>
                <property>sound/dist-thunder3</property>
                <factor>1</factor>
                <offset>0.50</offset>
                <min>1.00</min>
                <max>2.00</max>
            </pitch>
            <volume>
                <property>sound/dist-thunder3</property>
            </volume>
        </thunder3>
        <heli>
            <name>mary</name>
            <mode>looped</mode>
            <path>Aircraft/u.s.navy/vessel-sound/mary.wav</path>
            <condition>
                <property>controls/Mary-ondeck</property>
            </condition>
            <position>
                <x> 63.4466 </x>
                <y>  0 </y>
                <z> 11 </z>
            </position>
            <reference-dist>25</reference-dist>
            <max-dist>250</max-dist>
        </heli>
    </fx>
</PropertyList>