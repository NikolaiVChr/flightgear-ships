<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
    <sim>
        <description>USS Oliver Perry</description>
        <author>Alexis Bory (3D), Detlef Faber (FDM), T. Henkel (Combined), Nikolai V. Chr. (Misc. fixes)</author>
        <minimum-fg-version>2018.3</minimum-fg-version>
        <long-description>Perry Class or FFG-7 is a general purpose escort ship type from mid 1970'ties.</long-description>
        <rating>
            <FDM type="int">1</FDM>
            <systems type="int">1</systems>
            <cockpit type="int">1</cockpit>
            <model type="int">5</model>
        </rating>
        <status>experimental</status>
        <presets>
            <onground>true</onground>
        </presets>
        <previews>
            <preview>
                <type>exterior</type>
                <splash type="bool">true</splash>
                <path>thumbs/Perry-thumb.png</path>
            </preview>
        </previews>
        <sound>
            <path>Aircraft/u.s.navy/vessel-sound/vessel-sound.xml</path>
        </sound>
        <flight-model>null</flight-model>
        <virtual-cockpit archive="y">true</virtual-cockpit>
        <allow-toggle-cockpit archive="y">true</allow-toggle-cockpit>
        <SDM include="PerryClass-SDM.xml" />
        <model>
            <path>Aircraft/u.s.navy/Models/USS-OliverPerry.xml</path>
            <crew>
                <pilot>
                    <visible type="int">1</visible>
                </pilot>
            </crew>
        </model>
        <view n="bridge-star">
            <internal archive="y">true</internal>
            <config>
                <x-offset-m archive="y" type="double">4.88</x-offset-m>
                <y-offset-m archive="y" type="double">15.05</y-offset-m>
                <z-offset-m archive="y" type="double">-25.3</z-offset-m>
                <pitch-offset-deg>-7.5</pitch-offset-deg>
            </config>
        </view>
        <!--"bridge-port"-->
        <view n="0">
            <internal archive="y">true</internal>
            <config>
                <x-offset-m archive="y" type="double">-4.98</x-offset-m>
                <y-offset-m archive="y" type="double">14.95</y-offset-m>
                <z-offset-m archive="y" type="double">-25</z-offset-m>
                <pitch-offset-deg>-0.5</pitch-offset-deg>
            </config>
        </view>
        <!--"bridge-star"-->
        <view n="1">
            <type>lookfrom</type>
            <internal archive="y">true</internal>
            <config>
                <from-model type="bool">true</from-model>
                <x-offset-m archive="y" type="double">5</x-offset-m>
                <y-offset-m archive="y" type="double">14.92</y-offset-m>
                <z-offset-m archive="y" type="double">-25.3</z-offset-m>
                <pitch-offset-deg>-0.5</pitch-offset-deg>
            </config>
        </view>
        <chase-distance-m type="double">220.0</chase-distance-m>
        <view n="2">
            <config>
                <target-z-offset-m archive="y" type="double">-25.5</target-z-offset-m>
                <target-y-offset-m archive="y" type="double">20</target-y-offset-m>
                <pitch-offset-deg>-15.0</pitch-offset-deg>
            </config>
        </view>
        <view n="102">
            <name>flip-view</name>
            <enabled type="bool">true</enabled>
            <type>lookat</type>
            <config>
                <from-model type="bool">true</from-model>
                <from-model-idx type="int">0</from-model-idx>
                <eye-lat-deg-path>/position/latitude-deg</eye-lat-deg-path>
                <eye-lon-deg-path>/position/longitude-deg</eye-lon-deg-path>
                <eye-alt-ft-path>/position/altitude-ft</eye-alt-ft-path>
                <eye-heading-deg-path>/orientation/heading-deg</eye-heading-deg-path>
                <eye-pitch-deg-path>0</eye-pitch-deg-path>
                <eye-roll-deg-path>0</eye-roll-deg-path>
                <at-model type="bool">true</at-model>
                <at-model-idx type="int">0</at-model-idx>
                <at-model-heading-damping type="double">0.0</at-model-heading-damping>
                <target-z-offset-m type="double">0</target-z-offset-m>
                <ground-level-neardeck-m type="double">0.5</ground-level-neardeck-m>
                <x-offset-m>0</x-offset-m>
                <!-- right -->
                <y-offset-m>50</y-offset-m>
                <!-- up -->
                <z-offset-m alias="../../chase-distance-m" />
                <pitch-offset-deg>5</pitch-offset-deg>
                <default-field-of-view-deg>120</default-field-of-view-deg>
            </config>
        </view>
        <!-- other views  -->
        <view n="106">
            <name>Bow</name>
            <type>lookfrom</type>
            <config>
                <from-model type="bool">true</from-model>
                <from-model-idx type="int">0</from-model-idx>
                <x-offset-m archive="y" type="double">0</x-offset-m>
                <y-offset-m archive="y" type="double">11.75</y-offset-m>
                <z-offset-m archive="y" type="double">-55.9</z-offset-m>
                <pitch-offset-deg>0.5</pitch-offset-deg>
            </config>
        </view>
        <view n="103">
            <name>stern</name>
            <type>lookfrom</type>
            <config>
                <from-model type="bool">true</from-model>
                <from-model-idx type="int">0</from-model-idx>
                <x-offset-m archive="y" type="double">-5</x-offset-m>
                <y-offset-m archive="y" type="double">13.55</y-offset-m>
                <z-offset-m archive="y" type="double">39.42</z-offset-m>
                <pitch-offset-deg>5</pitch-offset-deg>
            </config>
        </view>
        <view n="104">
            <name>wso</name>
            <type>lookfrom</type>
            <config>
                <from-model type="bool">true</from-model>
                <from-model-idx type="int">0</from-model-idx>
                <x-offset-m archive="y" type="double">-0.5</x-offset-m>
                <y-offset-m archive="y" type="double">15.05</y-offset-m>
                <z-offset-m archive="y" type="double">15.32</z-offset-m>
                <heading-offset-deg>180</heading-offset-deg>
                <pitch-offset-deg>0</pitch-offset-deg>
            </config>
        </view>
        <view n="105">
            <name>mast</name>
            <type>lookfrom</type>
            <internal archive="y">true</internal>
            <config>
                <from-model type="bool">true</from-model>
                <from-model-idx type="int">0</from-model-idx>
                <x-offset-m archive="y" type="double">-2</x-offset-m>
                <y-offset-m archive="y" type="double">29.58</y-offset-m>
                <z-offset-m archive="y" type="double">-5.5</z-offset-m>
                <pitch-offset-deg>-15</pitch-offset-deg>
            </config>
        </view>
        <view n="101">
            <name>Fly with View</name>
            <type>lookfrom</type>
            <config>
                <internal type="bool">false</internal>
                <from-model type="bool">false</from-model>
                <from-model-idx type="int">0</from-model-idx>
                <eye-lat-deg-path>/position/latitude-deg</eye-lat-deg-path>
                <eye-lon-deg-path>/position/longitude-deg</eye-lon-deg-path>
                <eye-alt-ft-path>/position/altitude-ft</eye-alt-ft-path>
                <eye-heading-deg-path>/orientation/heading-deg</eye-heading-deg-path>
                <eye-pitch-deg-path>/orientation/pitch-deg</eye-pitch-deg-path>
                <eye-roll-deg-path>/orientation/roll-deg</eye-roll-deg-path>
                <at-model type="bool">false</at-model>
                <at-model-idx type="int">0</at-model-idx>
                <ground-level-nearplane-m type="double">0.1f</ground-level-nearplane-m>
                <heading-offset-deg>0</heading-offset-deg>
                <x-offset-m>27.074</x-offset-m>
                <y-offset-m>12</y-offset-m>
                <z-offset-m>17.67</z-offset-m>
                <pitch-offset-deg>10</pitch-offset-deg>
                <default-field-of-view-deg>100</default-field-of-view-deg>
            </config>
        </view>
        <hud>
            <enable3d>false</enable3d>
        </hud>
        <help>
            <title>Ahoy Sailor, Sir!!</title>
            <key>
                <name>s</name>
                <desc>slow forward</desc>
            </key>
            <key>
                <name>H</name>
                <desc>half ahead</desc>
            </key>
            <key>
                <name>C</name>
                <desc>Cruise</desc>
            </key>
            <key>
                <name>f</name>
                <desc>full ahead</desc>
            </key>
            <key>
                <name>del</name>
                <desc>full stop</desc>
            </key>
            <key>
                <name>Space</name>
                <desc>Engine on/off</desc>
            </key>
            <key>
                <name>L</name>
                <desc>lights</desc>
            </key>
            <key>
                <name>j</name>
                <desc>Horn</desc>
            </key>
            <line />
            <line>Note the Turbine needs her time</line>
            <line>to become full power,</line>
            <line />
            <line>Steering is some getting used to</line>
            <line>no autopilot untill now</line>
            <line />
            <line>-------------------------</line>
            <line />
            <line />
            <line>speed control</line>
            <line>"s/H/C/f"</line>
            <line />
            <line />
            <line>ur bridge</line>
        </help>
        <!--
  pls dont wonder about what ive done here, im new to this, ! evrything is experimental 
  (excited for all tips ;) 
-->
        <menubar>
            <default>
                <menu n="100">
                    <label>US Naval Research HQ</label>
                    <enabled type="bool">true</enabled>
                    <item>
                        <label>Tugboat</label>
                        <name>Tugboat</name>
                        <binding>
                            <command>dialog-show</command>
                            <dialog-name>pushback</dialog-name>
                        </binding>
                    </item>
                    <item>
                        <label>Lights</label>
                        <binding>
                            <command>nasal</command>
                            <script>var lights = gui.Dialog.new("sim/gui/dialogs/lights/dialog", "Aircraft/u.s.navy/Systems/lights-dlg.xml");
                                    lights.open();</script>
                        </binding>
                    </item>
                    <item>
                        <label>AI</label>
                        <binding>
                            <command>nasal</command>
                            <script>var lights = gui.Dialog.new("sim/gui/dialogs/ai/dialog", "Aircraft/u.s.navy/Systems/AI.xml");
                                    lights.open();</script>
                        </binding>
                    </item>
                </menu>
            </default>
        </menubar>
        <!--<ai>
            <enabled type="bool">true</enabled>
            <scenarios-enabled type="bool" userarchive="y">true</scenarios-enabled>
            <scenario>FFG7_AI_Part</scenario>
        </ai>-->
        <weight n="0">
            <name>Crew</name>
            <weight-lb>36000</weight-lb>
            <max-lb>400000</max-lb>
            <min-lb>180</min-lb>
        </weight>
        <weight n="1">
            <name>Pax/Baggage</name>
            <weight-lb>18980</weight-lb>
            <max-lb>400000</max-lb>
            <min-lb>0</min-lb>
        </weight>
        <systems>
            <autopilot>
                <path>Aircraft/u.s.navy/Systems/pt-boat-filters.xml</path>
            </autopilot>
        </systems>
        <multiplay>
            <generic>
                <float n="0" alias="/orientation/roll-deg"/>
                <float n="1" alias="/velocities/groundspeed-kt"/>
                <float n="2" alias="/gear/gear[0]/compression-norm"/>
                <float n="3" alias="/velocities/airspeed-kt"/>
                <int n="0" alias="/sim/crashed"/>
            </generic>
        </multiplay>
    </sim>
    <autopilot>
        <config>
            <min-climb-speed-kt type="float">70.0</min-climb-speed-kt>
            <best-climb-speed-kt type="float">75.0</best-climb-speed-kt>
            <target-climb-rate-fpm type="float">500.0</target-climb-rate-fpm>
            <target-descent-rate-fpm type="float">1000.0</target-descent-rate-fpm>
            <elevator-adj-factor type="float">4000.0</elevator-adj-factor>
            <integral-contribution type="float">0.01</integral-contribution>
            <zero-pitch-throttle type="float">0.45</zero-pitch-throttle>
            <zero-pitch-trim-full-throttle type="float">0.14</zero-pitch-trim-full-throttle>
            <rudder-adj-factor type="float">0</rudder-adj-factor>
            <throttle-adj-factor type="float">0.0</throttle-adj-factor>
        </config>
    </autopilot>
    <engines>
        <engine>
            <rpm type="double">700</rpm>
        </engine>
    </engines>
    <controls>
        <flight>
            <aileron0 type="double">0.0</aileron0>
            <aileron-filtered type="double">0.0</aileron-filtered>
            <throttle-filtered type="double">0.0</throttle-filtered>
        </flight>
        <engines>
            <engine n="0">
                <magnetos>0</magnetos>
                <throttle>0.009</throttle>
            </engine>
        </engines>
        <lighting>
            <panel-norm>1</panel-norm>
        </lighting>
    </controls>
    <instrumentation>
        <flight>
            <aileron0 type="double">0.0</aileron0>
            <aileron-filtered type="double">0.0</aileron-filtered>
            <throttle-filtered type="double">0.0</throttle-filtered>
        </flight>
        <engines>
            <engine n="0">
                <magnetos>0</magnetos>
                <throttle>0.009</throttle>
            </engine>
        </engines>
        <tacan>
            <ident>029X</ident>
        </tacan>
    </instrumentation>
    <input>
        <keyboard include="Nasal/keyboard.xml" />
        <!--mouse include="Nasal/ship-mice.xml"/-->
    </input>
    <nasal>
        <ship>
            <file>Aircraft/u.s.navy/Nasal/ship.nas</file>
        </ship>
        <autopilot>
            <file>Aircraft/u.s.navy/Nasal/autopilot.nas</file>
        </autopilot>
    </nasal>
</PropertyList>